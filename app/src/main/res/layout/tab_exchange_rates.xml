<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="Search for a certain course"
            android:paddingStart="3dp"
            android:textColor="@color/lightBlue"
            android:textColorHint="@color/lightBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"/>

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="118dp"
            android:layout_height="110dp"
            android:background="@drawable/ic_baseline_search_24_white"
           app:layout_constraintTop_toTopOf="@+id/search_field"
            app:layout_constraintStart_toEndOf="@+id/search_field" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exchange_rates_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_field" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>